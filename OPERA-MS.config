# Path to contigs file.
# contigs_file = /mnt/ScratchPool/bertrandd/OPERA_MS/simLC/ASSEMBLY/SOAP/contig.fa
#CONTIGS_FILE /mnt/projects/bertrandd/opera_lg/META_GENOMIC_HYBRID_ASSEMBLY/SOFWARE/OPERA-MS/
CONTIGS_FILE /home/bertrandd/PROJECT_LINK/OPERA_LG/META_GENOMIC_HYBRID_ASSEMBLY/SOFWARE/OPERA-MS/test_files/final.contigs_soap.fa

# Comma separated paths to .sam mapping files.
# mapping_files = -
#MAPPING_FILES /mnt/projects/bertrandd/opera_lg/META_GENOMIC_HYBRID_ASSEMBLY/SOFWARE/OPERA-MS//contigs.bam
MAPPING_FILES ()

#LIB /mnt/projects/bertrandd/opera_lg/META_GENOMIC_HYBRID_ASSEMBLY/SOFWARE/OPERA-MS//contigs.bam
#LIB /mnt/projects/bertrandd/opera_lg/META_GENOMIC_HYBRID_ASSEMBLY/SOFWARE/OPERA-MS//contigs.bam
#LIB /mnt/projects/bertrandd/opera_lg/META_GENOMIC_HYBRID_ASSEMBLY/SOFWARE/OPERA-MS//contigs.bam
LIB ()

# Comma separated paths to edges files.
#edges_files = /mnt/ScratchPool/bertrandd/OPERA_MS/simLC/ASSEMBLY/SOAP/MAPPING/BOWTIE/clusters_300.dat,/mnt/ScratchPool/bertrandd/OPERA_MS/simLC/ASSEMBLY/SOAP/MAPPING/BOWTIE/clusters_10k.dat
#EDGES_FILES /mnt/projects/bertrandd/sigma/simLC/ASSEMBLY/SOAP/MAPPING/BOWTIE/clusters_300_2k_10k.dat

# Path to Sigma contigs file.
#sigma_contigs_file = /mnt/ScratchPool/bertrandd/OPERA_MS/simLC/ASSEMBLY/SOAP/contigs_340_80
#SIGMA_CONTIGS_FILE /mnt/projects/bertrandd/opera_lg/META_GENOMIC_HYBRID_ASSEMBLY/SOFWARE/OPERA-MS/

# Path to output directory.
#output_dir = /mnt/ScratchPool/bertrandd/OPERA_MS/simLC/SIGMA/SOAP/BOWTIE/300_10k
#OUTPUT_DIR /mnt/projects/bertrandd/opera_lg/META_GENOMIC_HYBRID_ASSEMBLY/SOFWARE/OPERA-MS/
OUTPUT_DIR TEST_RUN

# Threshold on the contig length.
# Shorter contigs are skipped and not clustered by the method.
# Default: 500
CONTIG_LEN_THR 500

# Contig edge length.
# Reads starting at both edges are not included in the read count/arrival rate
# computation to avoid "edge effects".
# Default: 0
CONTIG_EDGE_LEN 80

# Contig window length.
# If set to 0, contig-based scoring is used instead of window-based scoring.
# Default: 0
CONTIG_WINDOW_LEN 340

# Type of read count probability distribution.
# Currently, "Poisson" and "NegativeBinomial" are supported.
# Default: "Poisson"
PDIST_TYPE Poisson 

# Variance to mean ratio for negative binomial distribution.
# vmr = 2

# the KMER_SIZE 60
KMER_SIZE 60

#Skip redundant executions of OPERA by setting this variable to 1. This is read in runOperaMS.pl. 
SKIP_OPERA 1

#Output directory for the long read information.
#User may enter an absolute path or a relative path from ../OPERA-MS
LONG_READ_OUTPUT_DIR long-read

#The long read file
#User may enter an absolute path or a relative path from ../OPERA-MS
LONG_READ_FILE test_files/POOL.fa

#The first illumina read file
#User may enter an absolute path or a relative path from ../OPERA-MS
ILLUMINA_READ_1 test_files/mock1000.R1.fastq.gz

#The corresponding illumina read file.
#User may enter an absolute path or a relative path from ../OPERA-MS
ILLUMINA_READ_2 test_files/mock1000.R2.fastq.gz
#Input the __path__ to samtools, NOT THE EXECUTABLE.
#SAMTOOLS

